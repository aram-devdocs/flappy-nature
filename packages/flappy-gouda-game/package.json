{
  "name": "@repo/flappy-gouda-game",
  "version": "0.3.1",
  "description": "A drop-in canvas-based Flappy Bird game component for React 18+",
  "keywords": ["flappy-bird", "game", "canvas", "react", "react-component", "typescript"],
  "author": "Aram Hammoudeh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aram-devdocs/flappy-gouda.git",
    "directory": "packages/flappy-gouda-game"
  },
  "homepage": "https://flappy-gouda.aramhammoudeh.com",
  "bugs": {
    "url": "https://github.com/aram-devdocs/flappy-gouda/issues"
  },
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist", "README.md", "LICENSE"],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "@repo/engine": "workspace:*",
    "@repo/hooks": "workspace:*",
    "@repo/types": "workspace:*",
    "@repo/ui": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@repo/config": "workspace:*",
    "@storybook/react": "^8.6.17",
    "@testing-library/react": "^16.1.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "jsdom": "^26.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.4.0",
    "typescript": "5.9.2",
    "vitest": "^3.0.0"
  }
}
